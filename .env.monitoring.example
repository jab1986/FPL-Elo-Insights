# FPL ML Monitoring System Environment Variables
# Copy this file to .env.monitoring and update the values

# Model Configuration
ML_MODEL_NAME=fpl_points_predictor
ML_ENVIRONMENT=development

# File Paths
ML_ARTIFACTS_DIR=ml/artifacts
ML_LOGS_DIR=ml/logs

# Monitoring Configuration
ML_MONITORING_INTERVAL_MINUTES=60
ML_DATA_WINDOW_DAYS=30

# Performance Thresholds
ML_MAE_WARNING=1.5
ML_MAE_CRITICAL=2.0
ML_RMSE_WARNING=2.5
ML_RMSE_CRITICAL=3.0
ML_R2_WARNING=0.3
ML_R2_CRITICAL=0.1

# Drift Thresholds
ML_PSI_WARNING=0.1
ML_PSI_CRITICAL=0.25
ML_KS_STATISTIC_WARNING=0.1
ML_KS_STATISTIC_CRITICAL=0.2

# Notification Configuration
ML_NOTIFICATION_CHANNELS=email,slack
ML_EMAIL_RECIPIENTS=ml-team@company.com,data-team@company.com
ML_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ML_DISCORD_WEBHOOK_URL=
ML_ALERT_COOLDOWN_MINUTES=15

# Database Configuration
ML_DATABASE_ENABLED=true
ML_DATABASE_CONNECTION_STRING=postgresql://user:password@localhost:5432/fpl_ml

# Retraining Configuration
ML_RETRAIN_MIN_INTERVAL_HOURS=24
ML_RETRAIN_MAX_ATTEMPTS=3
ML_RETRAIN_IMPROVEMENT_THRESHOLD=0.05
ML_EMERGENCY_RETRAIN_ENABLED=true
ML_EMERGENCY_RETRAIN_THRESHOLD=0.2

# Scheduler Configuration
ML_SCHEDULER_ENABLED=true
ML_SCHEDULER_CRON=0 2 * * *
ML_PERFORMANCE_BASED_SCHEDULING=true
ML_MAX_CONCURRENT_JOBS=1

# API Configuration
ML_API_ENABLED=true
ML_API_HOST=0.0.0.0
ML_API_PORT=8001

# Advanced Configuration
ML_STATISTICAL_PROCESS_CONTROL=true
ML_TREND_ANALYSIS=true
ML_PREDICTION_FORECASTING=true
ML_TREND_ANALYSIS_WINDOW=7
ML_FORECASTING_HORIZON=14

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# External Dependencies (uncomment and configure as needed)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your-supabase-anon-key
# REDIS_URL=redis://localhost:6379
# INFLUXDB_URL=http://localhost:8086
# INFLUXDB_TOKEN=your-influxdb-token
# INFLUXDB_ORG=your-org
# INFLUXDB_BUCKET=your-bucket
